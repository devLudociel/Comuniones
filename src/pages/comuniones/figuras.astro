---
import ProductTemplate from "../../components/ProductTemplate.astro";
import { productos } from "../../data/productos.js";
import { buildGalleryFromFolders, getProductosDir } from "../../utils/gallery.js";

const product = productos.find((item) => item.slug === "figuras");
const productosDir = getProductosDir();
const gallery = buildGalleryFromFolders(productosDir, ["Figuras"]);
const productWithGallery = product
  ? { ...product, gallery }
  : { gallery };
---

<ProductTemplate product={productWithGallery} />
